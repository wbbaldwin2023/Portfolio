<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox alignment="CENTER" spacing="20" style="-fx-background-color: lightblue; -fx-padding: 50;" xmlns:fx="http://javafx.com/fxml" fx:controller="edu.virginia.sde.reviews.LoginController">

    <!-- Title Label -->
    <Label text="Course Review Login" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Text field for the username -->
    <TextField fx:id="usernameField" promptText="Username" maxWidth="300" style="-fx-border-color: black; -fx-border-width: 1px;" />

    <!-- Password field for the password -->
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300" style="-fx-border-color: black; -fx-border-width: 1px;" />

    <!-- Buttons for login and register, placed side by side -->
    <HBox alignment="CENTER" spacing="10">
        <Button text="Login" onAction="#handleLogin" style="-fx-background-color: white; -fx-text-fill: black; -fx-border-color: black; -fx-border-width: 1px;" />
        <Button text="Register" onAction="#handleRegister" style="-fx-background-color: white; -fx-text-fill: black; -fx-border-color: black; -fx-border-width: 1px;" />
        <Button text="Close" style="-fx-background-color: red; -fx-text-fill: white;" onAction="#closeProgram" />
    </HBox>

    <!-- Label to display error or success messages -->
    <Label fx:id="messageLabel" textFill="red" />

</VBox>
